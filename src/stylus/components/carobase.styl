body
	background-color white

.wrapper
	margin 0 auto
	padding 0
	width 640px

.caro-wrap
	width 100%
	position relative
	.viewport
		overflow hidden
	ul
		list-style-type none
		margin 0
		padding 0
	.thumbnail-nav
		text-align center
		padding 20px 0

.next-prev-ctrls
	.trigger
		color $ctrlTrigger
		font-size 40px
		text-decoration none
	.item
		position absolute
		top 37%
	.item-prev
		left $ctrlOffset
	.item-next
		right $ctrlOffset
	.inactive
		.trigger
			opacity 0.3

.panel
	float left

.thumbnail-nav
	.item
		display inline-block
		margin 0 20px
	.trigger
		height 20px
		width 20px
		border-radius 100%
		background-color $thumbNavTrigger
		display block
		&.active
			border 2px solid $thumbNavActiveBorder

